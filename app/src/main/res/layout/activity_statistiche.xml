<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".Statistiche_SerieA.StatisticheActivity">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/imageViewlogoStatistiche"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            app:srcCompat="@mipmap/image_statistiche1_logo_foreground" />


    </com.google.android.material.appbar.AppBarLayout>


    <ImageView
        android:id="@+id/imageViewSerieaStatistiche"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginTop="110dp"
        app:srcCompat="@mipmap/ic_launcher_serie_a_logo" />

        <TextView
            android:id="@+id/textViewSerieaStatistiche"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="90dp"
            android:layout_marginTop="130dp"
            android:text="Serie A"
            android:textColor="#FFFFFF"
            android:textSize="25sp"
            android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewPremierStatistiche"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginTop="200dp"
        app:srcCompat="@mipmap/ic_launcher_premier_foreground" />

    <TextView
        android:id="@+id/textViewPremierStatistiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="220dp"
        android:text="Premier League"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewLigaStatistiche"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginTop="290dp"
        app:srcCompat="@mipmap/ic_launcher_liga_foreground" />

    <TextView
        android:id="@+id/textViewLigaStatistiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="305dp"
        android:text="Liga"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewBundesLigaStatistiche"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginTop="380dp"
        app:srcCompat="@mipmap/ic_launcher_bundesliga_foreground" />

    <TextView
        android:id="@+id/textViewBundesLigaStatistiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="395dp"
        android:text="BundesLiga"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

    <ImageView
        android:id="@+id/imageViewLigue1Statistiche"
        android:layout_width="92dp"
        android:layout_height="69dp"
        android:layout_marginTop="470dp"
        app:srcCompat="@mipmap/ic_launcher_ligue1_foreground" />

    <TextView
        android:id="@+id/textViewLigue1Statistiche"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="90dp"
        android:layout_marginTop="485dp"
        android:text="Ligue 1"
        android:textColor="#FFFFFF"
        android:textSize="25sp"
        android:textStyle="bold"/>

</RelativeLayout>
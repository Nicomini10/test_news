<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#009688"
    tools:context=".BundesLiga.CalendarioBundesLiga">

    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/appBarLayout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#009688"
        android:theme="@style/AppTheme.AppBarOverlay">

        <ImageView
            android:id="@+id/imageView4"
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:paddingTop="10dp"
            app:srcCompat="@mipmap/ic_launcher_bundesliga_foreground" />


    </com.google.android.material.appbar.AppBarLayout>


    <Button
        android:id="@+id/ScaricaCalendario"
        android:layout_width="230dp"
        android:layout_height="70dp"
        android:layout_marginStart="95dp"
        android:layout_marginTop="115dp"
        android:text="Scarica calendario completo in formato pdf"
        android:textColor="@color/cardview_dark_background"
        android:textAppearance="@style/TextAppearance.AppCompat.Medium"
        android:textStyle="bold|italic">

    </Button>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">


        <TextView
            android:id="@+id/fectdata"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="190dp"
            android:gravity="center"
            android:hint="Calendario BundesLiga"
            android:padding="5dp"
            android:textColor="#FFFFFF"
            android:textSize="20sp"
            android:textStyle="bold" />

    </ScrollView>

</RelativeLayout>
<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Info.InfoActivity">


    <androidx.appcompat.widget.Toolbar
        android:id="@+id/toolbar2"
        android:layout_width="match_parent"
        android:layout_height="110dp"
        android:background="?attr/colorPrimary"
        android:minHeight="?attr/actionBarSize"
        android:theme="?attr/actionBarTheme" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <ImageView
            android:id="@+id/imageView8"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srcCompat="@mipmap/image_info_foreground" />

        <TextView
            android:id="@+id/textView4"
            android:layout_width="330dp"
            android:layout_height="250dp"
            android:layout_marginStart="35dp"
            android:layout_marginTop="10dp"
            android:gravity="center"
            android:text="App pensata per gli appasionati di calcio, che ti consente di avere informazioni su squadre, classifiche, calendari, marcatori sui 5 principali campionati europei. Inoltre una sezione dedicata al Live che ti permette di verificare le partite della giornata odierna con i risultati in tempo reale."
            android:textColor="#009688"
            android:textSize="20sp" />

        <TextView
            android:id="@+id/textView5"
            android:layout_width="310dp"
            android:layout_height="100dp"
            android:layout_marginStart="50dp"
            android:layout_marginTop="-10dp"
            android:gravity="center"
            android:text="Ideata e realizzata da Nico Minichillo come lavoro di tesi per l'UniversitÃ  degli Studi del Molise."
            android:textColor="#009688"
            android:textSize="20sp" />

        <ImageView
            android:id="@+id/imageViewLogoUnimol"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="60dp"
            android:layout_marginTop="-20dp"
            app:srcCompat="@mipmap/image_unimol_logo_foreground" />

        <ImageView
            android:id="@+id/imageViewLogoApp"
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:layout_marginStart="200dp"
            android:layout_marginTop="-155dp"
            app:srcCompat="@mipmap/logo_app_info_foreground" />

    </LinearLayout>
</RelativeLayout>


